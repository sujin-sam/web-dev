<%- include('partials/header') %>
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="composeTitle" class="form-control" id="title">
        </div>
        <div class="form-group">
            <label for="msg">Post</label>
            <textarea rows="10" class="form-control" name="composeMsg" id="msg"></textarea>
        </div>
        <button type="submit" class="btn btn-lg btn-primary">Publish</button>
    </form>
    <%- include('partials/footer') %>